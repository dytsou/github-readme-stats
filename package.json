{
  "name": "@dytsou/github-readme-stats",
  "version": "1.1.7",
  "description": "Dynamically generate stats for your GitHub readme",
  "keywords": [
    "github-readme-stats",
    "readme-stats",
    "cards",
    "card-generator"
  ],
  "main": "src/index.js",
  "type": "module",
  "exports": {
    ".": "./src/index.js",
    "./worker": "./src/worker.ts"

  },
  "files": [
    "src",
    "api",
    "themes",
    "LICENSE",
    "readme.md",
    "openapi.yaml",
    "API.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/dytsou/github-readme-stats",
  "bugs": {
    "url": "https://github.com/dytsou/github-readme-stats/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dytsou/github-readme-stats.git"
  },
  "scripts": {
    "test": "mkdir -p .coverage-tmp && vitest run --coverage",
    "test:ci": "pnpm test && pnpm lint && pnpm format",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:update:snapshot": "vitest run -u",
    "test:e2e": "vitest run --config vitest.e2e.config.js",
    "theme-readme-gen": "node scripts/generate-theme-doc",
    "preview-theme": "node scripts/preview-theme",
    "close-stale-theme-prs": "node scripts/close-stale-theme-prs",
    "generate-langs-json": "node scripts/generate-langs-json",
    "update-license-year": "node scripts/update-license-year.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "lint": "NPM_CONFIG_LOGLEVEL=error npx eslint --max-warnings 0 \"./src/**/*.js\" \"./scripts/**/*.js\" \"./tests/**/*.js\" \"./api/**/*.js\" \"./themes/**/*.js\"",
    "bench": "vitest run --config vitest.bench.config.js",
    "deploy": "wrangler deploy",
    "deploy:preview": "wrangler deploy --env preview",
    "publish:npmjs": "pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:github": "pnpm publish --access public --no-git-checks --registry https://npm.pkg.github.com",
    "publish:all": "pnpm run publish:npm && pnpm run publish:github"
  },
  "author": "dytsou",
  "license": "MIT",
  "devDependencies": {
    "@actions/core": "^2.0.1",
    "@actions/github": "^7.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/escape-html": "^1.0.4",
    "@uppercod/css-to-object": "^1.1.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "axios-mock-adapter": "^2.1.0",
    "color-contrast-checker": "^2.1.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^62.0.0",
    "express": "^5.1.0",
    "globals": "^17.0.0",
    "happy-dom": "^20.0.11",
    "hjson": "^3.2.2",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.6",
    "lodash.snakecase": "^4.1.1",
    "parse-diff": "^0.11.1",
    "prettier": "^3.6.2",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "axios": "^1.13.1",
    "dotenv": "^17.2.3",
    "emoji-name-map": "^2.0.3",
    "escape-html": "^1.0.3",
    "github-username-regex": "^1.0.0",
    "hono": "^4.10.7",
    "word-wrap": "^1.2.5"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  },
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "overrides": {
      "qs": ">=6.14.1"
    }
  }
}
